<!--components/classic/music/index.wxml-->
<view hidden="{{hidden}}" class='container'>
  <image src='{{img}}'class="classic-img {{playing?'rotation':''}}" />
  <image src='{{!playing?playSrc:pauseSrc}}' bind:tap="onPlay" class="player-img " />
  <image src='images/music@tag.png' class='tag' />
  <text class='content' >{{content}}</text>
</view>
